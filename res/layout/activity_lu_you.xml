<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aeffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_luyou_program"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:onClick="selectProgram"
            android:text="@string/project_name"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/fhe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#aeffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_luyou_luyou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:onClick="selectLuYou"
            android:text="@string/msg_select_luyou"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/fhe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#aeffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_luyou_node"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:onClick="selectNode"
            android:text="@string/msg_select_node"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/fhe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_width="212dp"
            android:layout_height="39dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/selector_btn_button"
            android:gravity="center"
            android:onClick="confirm"
            android:text="@string/ok"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="212dp"
            android:layout_height="39dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_btn_button"
            android:gravity="center"
            android:onClick="taskFollowing"
            android:text="@string/task_following"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>